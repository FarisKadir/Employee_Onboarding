<div class="row">
  <div class="col-6"><h1>Employees</h1></div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/add" type="button" class="btn btn-primary align-self-center">+ADD</a> 
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each employees as |employee| }}
    <tr>
      <th scope="row">{{employee.id}}</th>
      <td>{{employee.first_name}}</td>
      <td>{{employee.last_name}}</td>
      <td>{{employee.email}}</td>
      <td>{{employee.plan}}</td>
      <td>
          <a href="#" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i> Edit</a>
          <a href="#" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i> Delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
<script src="../public/js/add.js"></script>
<script src="../public/js/logout.js"></script>