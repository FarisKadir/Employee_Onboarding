<div class="row">
  <div class="col s3 m-5">
    <div class="row"><h2>Add Or Edit An Employee</h2></div>
      <div class="row">
        <form>
            <div class="row">
              <label for="employee_id">Employee ID # (Required Only For Edit)</label>
              <input list="employees" type="text" class="form-control" id="employee_id" name="employee_id">
              <datalist id="employees">
                {{#each allStaff as |staff| }}
                  <option value="{{staff.id}}">{{staff.first_name}} {{staff.last_name}}</option>
                {{/each}}
              </datalist>
            </div>

            <div class="row">
              <label for="role">Employee's Role</label>
              <input list="roles" type="text" class="form-control" id="role" name="role">
              <datalist id="roles">
                <option value="3">Employee</option>
              </datalist>
            </div>

            <div class="row">
              <label for="first_name">First Name</label>
              <input type="text" class="form-control" id="first_name" name="first_name">
            </div>

            <div class="row">
              <label for="last_name">Last Name</label>
              <input type="text" class="form-control" id="last_name" name="last_name">
            </div>

            <div class="row">
              <label for="email">Email Address</label>
              <input type="text" class="form-control" id="email" name="email">
            </div>

            <div class="row">
              <label for="password">Temporary Password (Required Only For Add)</label>
              <input type="password" class="form-control" id="password" name="password">
            </div>

            <div class="row">
              <button class="btn btn-large blue valign-wrapper add">Add</button>

              <button class="btn btn-large yellow valign-wrapper update">Edit</button>
            </div>

        </form>
      </div>
  </div>
  <div class="col s7 m-5">
    <div class="row"><h2>Existing Employee List</h2></div>
      <div class="row">
        <div class="col">
          <table class="table centered responsive-table striped">
            <thead>
              <tr>
                <th scope="col">Employee ID #</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Email Address</th>
                <th scope="col">Employee's Role</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
              {{#each allStaff as |staff| }}
              <tr>
                <th>{{staff.id}}</th>
                <td>{{staff.first_name}}</td>
                <td>{{staff.last_name}}</td>
                <td>{{staff.email}}</td>
                <td>{{staffrole.name}}</td>
                <td>
                  <button class="btn btn-sm btn-danger valign-wrapper delete" data-id="{{staff.id}}">DELETE</button>
                </td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
  </div>
</div>

<script src="./js/cud.js"></script>